{
  "name": "OCaml",

  "image": "mcr.microsoft.com/vscode/devcontainers/base:debian-12",

  "features": {
    "ghcr.io/devcontainers-extra/features/ocaml-opam:1": {
      "installPlatformTools": false
    },
    "ghcr.io/meaningful-ooo/devcontainer-features/fish:2": {}
  },

  "customizations": {
    "vscode": {
      "settings": {
	"terminal.integrated.defaultProfile.linux": "fish",
	"terminal.integrated.profiles.linux": { "fish": { "path": "/usr/bin/fish" } },
	"[ocaml][ocaml.interface]": {
	  "editor.tabSize": 2,
	  "editor.rulers": [ 80 ],
	  "editor.formatOnSave": true
	}
      },
      "extensions": ["ocamllabs.ocaml-platform"]
    },

    "vscodium": {
      "registries": {
	"openvsx": {
	  "url": "https://open-vsx.org/vscode/gallery",
	  "headers": {
	    "Accept": "application/json"
	  }
	}
      },
      "extensions": {
	"ocamllabs.ocaml-platform": {
	  "registry": "openvsx"
	}
      }
    }
  },

  "postCreateCommand": [
	  "opam switch create cs3110-2025sp ocaml-base-compiler.5.2.0",
	  "eval $(opam env)",
	  "opam install -y utop odoc ounit2 qcheck bisect_ppx menhir ocaml-lsp-server ocamlformat"
  ],

  "remoteUser": "vscode"
}
